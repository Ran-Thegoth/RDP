<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keyboard_special_symbols"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/keyboard_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:orientation="horizontal"
        android:gravity="center">

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_1"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="1" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_2"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="2" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_3"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="3" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_4"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="4" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_5"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="5" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_6"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="6" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_7"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="7" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_8"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="8" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_9"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="9" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_0"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:orientation="horizontal"
        android:gravity="center">

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_at"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="\@" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_number_sign"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="#" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_currency"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="$" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_underscore"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="_" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_amp"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="&amp;" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_minus"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="-" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_plus"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="+" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_left_bracket"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="(" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_right_bracket"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text=")" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_slash"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="/" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/button_next_symbols"
            style="@style/KeyboardButtonMisc"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1.2"
            android:src="@drawable/ic_baseline_emoji_symbols_24" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_asterisk"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="*" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_quote"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="&quot;" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_single_quote"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="'" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_colon"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text=":" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_semicolon"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text=";" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_exclamation_mark"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="!" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_question_mark"
            style="@style/KeyboardButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="\?" />

        <ImageButton
            android:id="@+id/button_backspace"
            style="@style/KeyboardButtonMisc"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1.2"
            android:src="@drawable/ic_baseline_backspace_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <rs.keyboard.KeyboardButton
            android:id="@+id/button_return_to_letters"
            style="@style/KeyboardButtonMisc"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="ABC" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/comma"
            style="@style/KeyboardButtonMisc"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="," />

        <rs.keyboard.KeyboardButton
            android:id="@+id/space"
            style="@style/SpaceButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="3"
            android:text="" />

        <rs.keyboard.KeyboardButton
            android:id="@+id/dot"
            style="@style/KeyboardButtonMisc"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="." />

        <ImageButton
            android:id="@+id/enter"
            style="@style/KeyboardButtonMisc"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_subdirectory_arrow_left_24" />

    </LinearLayout>

</LinearLayout>