<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:id="@+id/v_session_card"
    android:background="@drawable/rounded_border"
    android:orientation="horizontal"
    android:padding="@dimen/widget_padding" >

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="6dp"
        android:contentDescription="@null"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lbl_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/lbl_last_con"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/last_connection"
            />
        
        <View android:layout_width="1dp" android:layout_height="0dp" android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="end|bottom"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_edit"
                android:contentDescription="@null"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/widget_padding"
                android:src="@drawable/ic_menu_edit" />
            <ImageView
                android:id="@+id/iv_delete"
                android:contentDescription="@null"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/widget_padding"
                android:src="@drawable/ic_menu_delete" />
            
        </LinearLayout>
    </LinearLayout>

</LinearLayout>